                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <!--<ContentPresenter Grid.Column="0" />-->
                                                <TextBlock  x:Name="ShowPART_TextBox"
                                                                Grid.Column="0" 
                                                              Margin="5 0 0 0"
                                                              HorizontalAlignment="Left" 
                                                              VerticalAlignment ="Center"
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                              IsHitTestVisible="True"
                                                              FontFamily="{TemplateBinding FontFamily}" 
                                                              Foreground="{TemplateBinding Foreground}"
                                                              Text="{Binding DataContext.Model.SelectedMonth.DisplayDate,RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                    AncestorType=UserControl}}"
                                                              FontSize="{TemplateBinding FontSize}"/>
                                                <TextBlock  Grid.Column="1"
                                                                FontFamily="{StaticResource FontAwesome}"
                                                                FontSize="{TemplateBinding FontSize}"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Foreground="#14a77d"
                                                                Text="&#xe6e4;" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <!--水印-->
                            <Border Grid.Column="1">
                                <TextBlock x:Name="Message"
                                           Margin="5,2,5,2"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}"
                                           IsHitTestVisible="False"
                                           Padding="0"
                                           TextAlignment="Center"
                                           Visibility="Collapsed" />
                            </Border>
                            <!--主内容区域-->
                            <Grid Grid.Column="1" x:Name="ContentSite" Margin="2 0 0 0" >

                                <!--<ContentPresenter x:Name="PART_SelectedItem" 
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Content="{TemplateBinding SelectionBoxItem}" 
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      HorizontalAlignment="Stretch" 
                                                      Margin="2,0,2,0" 
                                                      IsHitTestVisible="False" 
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                     VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />-->
                                <!--文本编辑-->
                                <TextBox  x:Name="PART_EditableTextBox" Visibility="Collapsed" 
                                              HorizontalAlignment="Stretch" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" IsHitTestVisible="True"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              IsReadOnly="{TemplateBinding IsReadOnly}" 
                                              FontFamily="{TemplateBinding FontFamily}" 
                                              Foreground="{TemplateBinding Foreground}"
                                              Text="{TemplateBinding Text}"
                                              FontSize="{TemplateBinding FontSize}" />
                            </Grid>
                        </Grid>
                        <!--弹出下拉控件-->
                        <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   Width="258"
                                   IsOpen="{Binding IsDropDownOpen,
                                                RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=PART_Root}"
                                   PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                            <Grid MaxHeight="{Binding MaxDropDownHeight, RelativeSource={RelativeSource TemplatedParent}}">
                                <Border x:Name="PopupBorder"
                                        Height="Auto"
                                        HorizontalAlignment="Stretch"
                                        Background="White"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5" />
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="Black" CornerRadius="5 5 0 0">
                                        <Grid>
                                            <Button Margin="5 0 0 0"
                                                        Background="Black" 
                                                        BorderThickness="0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding DataContext.PreviorSelectMonthCommand,RelativeSource={RelativeSource Mode=FindAncestor, 
                                                           AncestorType=UserControl}}">
                                                <Button.Content>
                                                    <TextBlock FontSize="{StaticResource DataGridContentFontSize}" Foreground="White" Text="&lt;"/>
                                                </Button.Content>
                                            </Button>
                                            <TextBlock Foreground="White"
                                                           FontSize="{StaticResource DataGridContentFontSize}"
                                                           Text="{Binding DataContext.Model.SelectedMonthYear,RelativeSource={RelativeSource Mode=FindAncestor, 
                                                           AncestorType=UserControl},StringFormat =yyyy年}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center">
                                            </TextBlock>

                                            <Button Margin="0 0 5 0" Background="Black" 
                                                        BorderThickness="0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding DataContext.NextSelectMonthCommand,RelativeSource={RelativeSource Mode=FindAncestor, 
                                                             AncestorType=UserControl}}">
                                                <Button.Content>
                                                    <TextBlock FontSize="{StaticResource DataGridContentFontSize}" Foreground="White" Text="&gt;"/>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                    <Grid Grid.Row="1">
                                        <WrapPanel Margin="8 0 8 0"
                                                       ClipToBounds="True"
                                                       Orientation="Horizontal"
                                                       IsItemsHost="True"/>
                                        <Rectangle Margin="9 0 10 0"
                                                       Height="1" 
                                                       Stroke="#cfcfcf"
                                                       VerticalAlignment="Center"/>
                                    </Grid>

                                </Grid>
                            </Grid>
                        </Popup>
                    </Grid>
                    <!--触发器-->
                    <ControlTemplate.Triggers>
                        <!--1.显示水印-->
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Value="">
                            <Setter TargetName="Message" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <!--编辑模式-->
                        <Trigger Property="IsEditable" Value="True">
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_DropDownToggle" Property="Grid.Column" Value="3" />
                            <Setter TargetName="PART_DropDownToggle" Property="Grid.ColumnSpan" Value="1" />
                            <Setter TargetName="PART_DropDownToggle" Property="Background" Value="Transparent" />
                            <Setter Property="IsTabStop" Value="false" />
                            <Setter TargetName="PART_DropDownToggle" Property="Focusable" Value="False" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ContextMenuButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="1 10 1 10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="Aquamarine"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>